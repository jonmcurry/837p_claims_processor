# Application Settings
APP_NAME=smart-claims-processor
APP_ENV=development
DEBUG=false
LOG_LEVEL=INFO

# API Settings
API_HOST=0.0.0.0
API_PORT=8000
API_PREFIX=/api/v1
CORS_ORIGINS=["http://localhost:3000"]

# PostgreSQL (Staging Database)
PG_HOST=localhost
PG_PORT=5432
PG_DATABASE=claims_staging
PG_USER=postgres
PG_PASSWORD=ClearToFly1
PG_POOL_MIN=10
PG_POOL_MAX=50
PG_POOL_TIMEOUT=30
PG_COMMAND_TIMEOUT=60

# SQL Server (Production Database)
SQL_HOST=localhost
SQL_PORT=1433
SQL_DATABASE=claims_production
SQL_USER=sa
SQL_PASSWORD=ClearToFly1
SQL_POOL_SIZE=25
SQL_POOL_TIMEOUT=20
SQL_COMMAND_TIMEOUT=120

# Redis Cache
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_POOL_MIN=10
REDIS_POOL_MAX=50
REDIS_TTL_SECONDS=3600

# Security Settings
SECRET_KEY=your-secret-key-here-minimum-32-characters
JWT_SECRET_KEY=your-jwt-secret-key-here
JWT_ALGORITHM=HS256
JWT_EXPIRATION_MINUTES=30
ENCRYPTION_KEY=your-encryption-key-for-phi-data
ENABLE_MFA=true

# Processing Configuration
BATCH_SIZE=500
WORKER_COUNT=8
MAX_RETRIES=5
RETRY_DELAY_SECONDS=1
CIRCUIT_BREAKER_THRESHOLD=5
CIRCUIT_BREAKER_TIMEOUT=30

# ML Model Settings
ML_MODEL_PATH=/models/claims_filter_model.h5
ML_PREDICTION_THRESHOLD=0.85
ML_BATCH_SIZE=100

# Performance Settings
ENABLE_CACHING=true
CACHE_TTL_RVU=3600
CACHE_TTL_FACILITY=7200
CACHE_TTL_RULES=14400
CONNECTION_POOL_RECYCLE=3600

# Monitoring
PROMETHEUS_PORT=9090
ENABLE_METRICS=true
ENABLE_TRACING=true
JAEGER_AGENT_HOST=localhost
JAEGER_AGENT_PORT=6831

# Feature Flags
ENABLE_ML_PREDICTIONS=true
ENABLE_ASYNC_PROCESSING=true
ENABLE_CIRCUIT_BREAKER=true
ENABLE_RATE_LIMITING=true

# Rate Limiting
RATE_LIMIT_REQUESTS=1000
RATE_LIMIT_PERIOD=60

# File Storage
FAILED_CLAIMS_PATH=/data/failed_claims
AUDIT_LOGS_PATH=/data/audit_logs
EXPORT_PATH=/data/exports

# Notification Settings
SMTP_HOST=localhost
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
ALERT_EMAIL=ops-team@company.com

# External Services
CMS_API_URL=https://api.cms.gov
CMS_API_KEY=your-cms-api-key
NPI_REGISTRY_URL=https://npiregistry.cms.hhs.gov

# Performance Targets
TARGET_THROUGHPUT=6667
TARGET_LATENCY_P99=100
SLA_UPTIME=99.9